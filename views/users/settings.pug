extends ../layout

block content
	.fdb-block(style="padding: 0; background-image: url(../../images/alt_wide_3.svg)")
		h1.main-title Users
    
		table.table.table-hover
			thead
				tr
					th Name
					th Email
					th Created At
					th
			tbody
				each user in users
					tr
						td 
							a(href=`/users/${user._id}`)= user.name
						td= user.email
						td= moment(user.createdAt).format('YYYY-MM-DD HH:mm:ss')
						td
							a.btn.btn-black.btn-empty(href=`/users/${user._id}/edit`) 
								| #[i.fa.fa-pencil] Edit
							| 
							a.btn.btn-black.btn-empty(href=`/users/${user._id}?_method=DELETE`)
								| #[i.fa.fa-trash] Delete
		a.btn.btn-black.btn-empty(href='/signup') #[i.fa.fa-plus] Register a new user